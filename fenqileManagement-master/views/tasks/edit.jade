            label 所属店铺
                input(name='task10',class='form-control',style='width:400px;' value="#{task.suoshudianpu}")
                input(type='hidden',name='_method',value='PUT')
            label 自营
                input(name='task11',class='form-control',style='width:400px;' value="#{task.ziying}")
                input(type='hidden',name='_method',value='PUT')
            label cart数量
                input(name='task12',class='form-control',style='width:400px;' value="#{task.qal}")
                input(type='hidden',name='_method',value='PUT')
            label showorhide
                input(name='task13',class='form-control',style='width:400px;' value="#{task.showorhide}")
                input(type='hidden',name='_method',value='PUT')    
        div.actions(style='margin-top:20px;')
            input(type='submit',value='确　定',class='btn btn-primary')
            span &nbsp;&nbsp;
            button(type='reset',class='btn') 重　置
